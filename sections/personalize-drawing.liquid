{%- render 'section-spacing-collapsing' -%}

<style>
  #shopify-section-{{ section.id }} {
    --title-underline-color: {{ section.settings.title_underline_color | default: '#FFD700' }};
    --step-number-color: {{ section.settings.step_number_color | default: '#FFD700' }};
    --left-panel-background: {{ section.settings.left_panel_background | default: '#FFB6C1' }};
    --right-panel-background: {{ section.settings.right_panel_background | default: '#FFFACD' }};
  }

  .personalize-drawing__title {
    position: relative;
    display: inline-block;
    margin-bottom: var(--spacing-10);
    font-weight: 700;
    font-family: inherit;
  }

  .personalize-drawing__title::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background-color: var(--title-underline-color);
    border-radius: 2px;
  }

  .personalize-drawing__steps {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-16);
  }

  @media screen and (min-width: 1000px) {
    .personalize-drawing__steps {
      gap: var(--spacing-20);
    }
  }

  .personalize-drawing__step {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0;
    align-items: stretch;
    background: #ffffff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  @media screen and (min-width: 1000px) {
    .personalize-drawing__step {
      grid-template-columns: 1fr 1fr;
      border-radius: 16px;
    }
  }

  .personalize-drawing__step-image-wrapper {
    position: relative;
    min-height: 300px;
    height: 100%;
    background: var(--left-panel-background);
    overflow: hidden;
  }

  @media screen and (min-width: 1000px) {
    .personalize-drawing__step-image-wrapper {
      min-height: 400px;
    }
  }

  .personalize-drawing__step-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    position: absolute;
    top: 0;
    left: 0;
  }

  .personalize-drawing__step-content {
    background: var(--right-panel-background);
    padding: var(--spacing-8);
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  @media screen and (min-width: 1000px) {
    .personalize-drawing__step-content {
      padding: var(--spacing-12);
    }
  }

  .personalize-drawing__step-number {
    color: var(--step-number-color);
    font-weight: 700;
    font-size: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-4);
    line-height: 1.2;
  }

  @media screen and (min-width: 700px) {
    .personalize-drawing__step-number {
      font-size: 2rem;
    }
  }

  .personalize-drawing__step-title {
    font-weight: 700;
    font-size: 1.25rem;
    line-height: 1.3;
    margin-bottom: var(--spacing-6);
    color: #000000;
  }

  @media screen and (min-width: 700px) {
    .personalize-drawing__step-title {
      font-size: 1.5rem;
    }
  }

  @media screen and (min-width: 1000px) {
    .personalize-drawing__step-title {
      font-size: 1.75rem;
    }
  }

  .personalize-drawing__step-text {
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: var(--spacing-8);
    color: #000000;
  }

  @media screen and (min-width: 700px) {
    .personalize-drawing__step-text {
      font-size: 1.125rem;
    }
  }

  .personalize-drawing__step-button-wrapper {
    margin-top: auto;
  }

  /* Position de l'image basée sur le paramètre */
  .personalize-drawing__step--image-right .personalize-drawing__step-image-wrapper {
    order: 2;
  }

  .personalize-drawing__step--image-right .personalize-drawing__step-content {
    order: 1;
  }

  @media screen and (max-width: 999px) {
    .personalize-drawing__step--image-right .personalize-drawing__step-image-wrapper {
      order: 1;
    }

    .personalize-drawing__step--image-right .personalize-drawing__step-content {
      order: 2;
    }
  }
</style>

<div {% render 'section-properties' %}>
  <div class="section-stack">
    <div class="container">
      <div class="v-stack gap-12 text-center">
        {%- if section.settings.title != blank -%}
          <h2 class="personalize-drawing__title {{ section.settings.heading_tag }}">
            {{ section.settings.title | escape }}
          </h2>
        {%- endif -%}

        {%- if section.blocks.size > 0 -%}
          <div class="personalize-drawing__steps">
            {%- for block in section.blocks -%}
              {%- liquid
                assign loading_strategy = nil
                
                if section.index > 3 or forloop.index > 3
                  assign loading_strategy = 'lazy'
                endif
              -%}

              <div class="personalize-drawing__step{% if block.settings.image_position == 'right' %} personalize-drawing__step--image-right{% endif %}" {{ block.shopify_attributes }}>
                <div class="personalize-drawing__step-image-wrapper" style="{% if block.settings.left_panel_background != blank %}background: {{ block.settings.left_panel_background }};{% endif %}">
                  {%- if block.settings.image != blank -%}
                    {%- liquid
                      assign image_alt = block.settings.step_title | escape
                      assign image_extension = block.settings.image | image_url | split: '.' | last | split: '?' | first | downcase
                    -%}
                    {%- if image_extension == 'gif' -%}
                      <img src="{{ block.settings.image | image_url: width: 1600 }}" alt="{{ image_alt }}" class="personalize-drawing__step-image" loading="{{ loading_strategy }}">
                    {%- else -%}
                      {%- capture sizes -%}(max-width: 999px) 100vw, 50vw{%- endcapture -%}
                      {%- capture widths -%}400,600,800,1000,1200,1400,1600,2000{%- endcapture -%}
                      {{- block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: loading_strategy, sizes: sizes, widths: widths, class: 'personalize-drawing__step-image', alt: image_alt -}}
                    {%- endif -%}
                  {%- endif -%}
                </div>

                <div class="personalize-drawing__step-content" style="{% if block.settings.right_panel_background != blank %}background: {{ block.settings.right_panel_background }};{% endif %}">
                  <div class="v-stack gap-4">
                    {%- if block.settings.step_number != blank -%}
                      <p class="personalize-drawing__step-number">STEP {{ block.settings.step_number }}</p>
                    {%- endif -%}
                    
                    {%- if block.settings.step_title != blank -%}
                      <h3 class="personalize-drawing__step-title">{{ block.settings.step_title | escape }}</h3>
                    {%- endif -%}

                    {%- if block.settings.step_text != blank -%}
                      <div class="personalize-drawing__step-text">
                        {{ block.settings.step_text }}
                      </div>
                    {%- endif -%}

                    {%- if block.settings.button_text != blank -%}
                      <div class="personalize-drawing__step-button-wrapper">
                        {%- render 'button', href: block.settings.button_url, content: block.settings.button_text, size: 'lg', background: block.settings.button_background, text_color: block.settings.button_text_color, style: block.settings.button_style -%}
                      </div>
                    {%- endif -%}
                  </div>
                </div>
              </div>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Personalize drawing",
  "class": "shopify-section--personalize-drawing",
  "tag": "section",
  "disabled_on": {
    "templates": ["password"],
    "groups": ["header", "custom.overlay"]
  },
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Recommended: 1200 x 800px .jpg, .png or .gif (GIFs supported). Image will fill the entire panel."
        },
        {
          "type": "select",
          "id": "image_position",
          "label": "Image position",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left",
          "info": "Choose whether the image appears on the left or right side (desktop only)"
        },
        {
          "type": "text",
          "id": "step_number",
          "label": "Step number",
