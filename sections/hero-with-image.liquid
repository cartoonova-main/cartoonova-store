<style>
  #shopify-section-{{ section.id }} {
    --hero-bg: {{ section.settings.background | default: '#ffffff' }};
    --hero-text: {{ section.settings.text_color | default: '#333333' }};
    --hero-title: {{ section.settings.title_color | default: '#1a1a1a' }};
    --hero-highlight: {{ section.settings.highlight_color | default: '#d4a017' }};
    --hero-btn-bg: {{ section.settings.button_background | default: '#d4a017' }};
    --hero-btn-text: {{ section.settings.button_text_color | default: '#1a1a1a' }};
  }

  .hero-with-image {
    background: var(--hero-bg);
    color: var(--hero-text);
    padding: var(--spacing-12) 0;
    position: relative;
    overflow: hidden;
  }

  .hero-with-image__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--container-gutter);
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-10);
    align-items: center;
  }

  @media screen and (min-width: 990px) {
    .hero-with-image__container {
      grid-template-columns: 1fr 1fr;
      gap: var(--spacing-16);
    }

    .hero-with-image {
      padding: var(--spacing-16) 0;
    }
  }

  .hero-with-image__content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-6);
  }

  .hero-with-image__eyebrow {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    font-size: var(--text-sm);
    color: {{ section.settings.eyebrow_color | default: '#b45309' }};
    font-weight: 500;
  }

  .hero-with-image__title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    color: var(--hero-title);
    margin: 0;
  }

  .hero-with-image__title-highlight {
    color: var(--hero-highlight);
    font-style: italic;
  }

  .hero-with-image__description {
    font-size: var(--text-base);
    line-height: 1.6;
    color: var(--hero-text);
    opacity: 0.85;
    max-width: 480px;
  }

  .hero-with-image__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-2);
    background: var(--hero-btn-bg);
    color: var(--hero-btn-text);
    padding: var(--spacing-4) var(--spacing-8);
    border-radius: {{ section.settings.button_border_radius | default: 8 }}px;
    font-weight: 700;
    font-size: var(--text-base);
    text-decoration: none;
    transition: transform 0.2s, box-shadow 0.2s;
    max-width: fit-content;
  }

  .hero-with-image__button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0,0,0,0.15);
  }

  .hero-with-image__benefits {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-6);
    margin-top: var(--spacing-4);
  }

  .hero-with-image__benefit {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    font-size: var(--text-sm);
    color: var(--hero-text);
    opacity: 0.8;
  }

  .hero-with-image__benefit-icon {
    flex-shrink: 0;
    width: 18px;
    height: 18px;
    color: {{ section.settings.benefit_icon_color | default: '#d4a017' }};
  }

  .hero-with-image__image-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-with-image__image {
    max-width: 100%;
    height: auto;
    border-radius: var(--rounded-sm);
  }

  @media screen and (max-width: 989px) {
    .hero-with-image__content {
      text-align: center;
      align-items: center;
    }

    .hero-with-image__description {
      max-width: 100%;
    }

    .hero-with-image__benefits {
      justify-content: center;
    }
  }
</style>

<section class="hero-with-image">
  <div class="hero-with-image__container">
    <div class="hero-with-image__content">
      {%- if section.settings.eyebrow != blank -%}
        <p class="hero-with-image__eyebrow">
          {{ section.settings.eyebrow }}
        </p>
      {%- endif -%}

      {%- if section.settings.title != blank -%}
        <h1 class="hero-with-image__title">
          {{ section.settings.title }}
          {%- if section.settings.title_highlight != blank -%}
            <span class="hero-with-image__title-highlight">{{ section.settings.title_highlight }}</span>
          {%- endif -%}
        </h1>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <p class="hero-with-image__description">
          {{ section.settings.description }}
        </p>
      {%- endif -%}

      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_url }}" class="hero-with-image__button">
          {{ section.settings.button_text }}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      {%- endif -%}

      {%- if section.settings.benefit_1 != blank or section.settings.benefit_2 != blank or section.settings.benefit_3 != blank -%}
        <div class="hero-with-image__benefits">
          {%- if section.settings.benefit_1 != blank -%}
            <div class="hero-with-image__benefit">
              <svg class="hero-with-image__benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12,6 12,12 16,14"/>
              </svg>
              <span>{{ section.settings.benefit_1 }}</span>
            </div>
          {%- endif -%}

          {%- if section.settings.benefit_2 != blank -%}
            <div class="hero-with-image__benefit">
              <svg class="hero-with-image__benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22,4 12,14.01 9,11.01"/>
              </svg>
              <span>{{ section.settings.benefit_2 }}</span>
            </div>
          {%- endif -%}

          {%- if section.settings.benefit_3 != blank -%}
            <div class="hero-with-image__benefit">
              <svg class="hero-with-image__benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                <circle cx="8.5" cy="8.5" r="1.5"/>
                <polyline points="21,15 16,10 5,21"/>
              </svg>
              <span>{{ section.settings.benefit_3 }}</span>
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>

    <div class="hero-with-image__image-wrapper">
      {%- if section.settings.image != blank -%}
        {%- capture sizes -%}(min-width: 990px) 50vw, 100vw{%- endcapture -%}
        {%- capture widths -%}400,600,800,1000,1200{%- endcapture -%}
        {{ section.settings.image | image_url: width: section.settings.image.width | image_tag: loading: 'eager', sizes: sizes, widths: widths, class: 'hero-with-image__image', fetchpriority: 'high' }}
      {%- else -%}
        {{ 'lifestyle-2' | placeholder_svg_tag: 'hero-with-image__image' }}
      {%- endif -%}
    </div>
  </div>
</section>

